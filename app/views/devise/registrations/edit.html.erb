<div class="space-y-8">
  <div>
    <h2 class="text-2xl font-bold text-center text-gray-900">Editar Perfil</h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Atualize suas informações pessoais
    </p>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, local: true, class: "space-y-6") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email",
          class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
        <p class="text-sm text-yellow-800">
          Aguardando confirmação para: <strong><%= resource.unconfirmed_email %></strong>
        </p>
      </div>
    <% end %>

    <div>
      <%= f.label :password, "Nova Senha", class: "block text-sm font-medium text-gray-700" %>
      <p class="text-xs text-gray-500 mt-1">Deixe em branco se não quiser alterar</p>
      <%= f.password_field :password, 
          autocomplete: "new-password",
          class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 mt-1">Mínimo de <%= @minimum_password_length %> caracteres</p>
      <% end %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirmar Nova Senha", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, 
          autocomplete: "new-password",
          class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :current_password, "Senha Atual", class: "block text-sm font-medium text-gray-700" %>
      <p class="text-xs text-gray-500 mt-1">Precisamos da sua senha atual para confirmar as alterações</p>
      <%= f.password_field :current_password, 
          autocomplete: "current-password",
          class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.submit "Atualizar", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
    </div>
  <% end %>

  <div class="border-t border-gray-200 pt-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Cancelar conta</h3>
    <p class="text-sm text-gray-600 mb-4">
      Não está satisfeito? Você pode excluir sua conta permanentemente.
    </p>
    <%= button_to "Excluir minha conta", 
        registration_path(resource_name), 
        data: { confirm: "Tem certeza? Esta ação não pode ser desfeita.", turbo_confirm: "Tem certeza? Esta ação não pode ser desfeita." }, 
        method: :delete,
        class: "inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" %>
  </div>

  <div class="text-center">
    <%= link_to "Voltar", :back, class: "text-blue-600 hover:text-blue-500 text-sm font-medium" %>
  </div>
</div>
