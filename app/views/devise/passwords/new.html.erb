<div class="space-y-6">
  <div>
    <h2 class="text-2xl font-bold text-center text-gray-900">Esqueceu sua senha?</h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Digite seu email para receber instruções de redefinição
    </p>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, local: true, class: "space-y-6") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email",
          class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.submit "Enviar instruções", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
