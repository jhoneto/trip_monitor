<% content_for :title, "Monitoramento - #{@kitetrip_route.name}" %>

<div class="h-screen flex flex-col bg-gray-50"
     data-controller="monitoring"
     data-monitoring-route-coordinates-value="<%= (@kitetrip_route.route_coordinates || []).to_json %>"
     data-monitoring-last-locations-value="<%= @last_locations.to_json %>"
     data-monitoring-route-id-value="<%= @kitetrip_route.id %>">
  <!-- Header -->
  <div class="bg-white border-b border-gray-200 px-6 py-4 flex-shrink-0">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <%= link_to kitetrip_kitetrip_routes_path(@kitetrip),
                    class: "text-gray-500 hover:text-gray-700 transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <div>
          <h1 class="text-xl font-semibold text-gray-900"><%= @kitetrip_route.name %></h1>
          <p class="text-sm text-gray-500">Kitetrip: <%= @kitetrip.name %></p>
        </div>
      </div>

      <div class="flex items-center space-x-4">
        <div class="text-sm text-gray-500">
          <span class="font-medium"><%= @participants.count %></span> participantes
        </div>
      </div>
    </div>
  </div>

  <!-- Layout de duas colunas -->
  <div class="flex-1 flex">
    <!-- Coluna dos participantes -->
    <div class="w-80 bg-white border-r border-gray-200 flex flex-col">
      <!-- Header dos participantes -->
      <div class="p-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Participantes</h3>
      </div>

      <!-- Lista de participantes -->
      <div class="flex-1 overflow-y-auto p-4">
        <div class="space-y-3">
          <% @participants.each do |participant| %>
            <div class="participant-item flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
              <!-- Avatar do participante -->
              <div class="participant-avatar w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white text-sm font-semibold">
                <%= participant.user.email.first.upcase %>
              </div>

              <!-- Informações do participante -->
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= participant.user.email %>
                </p>
                <p class="text-xs text-gray-500">
                  <%= participant.role.humanize %>
                </p>
              </div>

              <!-- Status indicator -->
              <div class="w-3 h-3 bg-gray-300 rounded-full"></div>
            </div>
          <% end %>

          <% if @participants.empty? %>
            <div class="text-center py-8">
              <p class="text-gray-500 text-sm">Nenhum participante encontrado</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Coluna do mapa -->
    <div class="flex-1 relative">
      <div data-monitoring-target="map" class="w-full h-full"></div>

      <!-- Hidden targets for Turbo Stream updates -->
      <% @participants.each do |participant| %>
        <div id="participant_<%= participant.user.id %>" style="display: none;"></div>
      <% end %>
    </div>
  </div>
</div>

<!-- Turbo Stream subscriptions for each participant -->
<% @participants.each do |participant| %>
  <%= turbo_stream_from "position_#{@kitetrip_route.id}_#{participant.user.id}" %>
<% end %>

<style>
  .participant-marker {
    position: relative;
  }

  .marker-avatar {
    width: 32px;
    height: 32px;
    background: #3B82F6;
    border: 3px solid white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 14px;
    position: relative;
    z-index: 2;
  }

  .marker-pulse {
    position: absolute;
    top: 0;
    left: 0;
    width: 32px;
    height: 32px;
    border: 2px solid #3B82F6;
    border-radius: 50%;
    animation: pulse 2s infinite;
    opacity: 0.6;
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
      opacity: 0.6;
    }
    50% {
      transform: scale(1.5);
      opacity: 0.3;
    }
    100% {
      transform: scale(2);
      opacity: 0;
    }
  }

  .custom-marker {
    background: transparent;
    border: none;
  }
</style>