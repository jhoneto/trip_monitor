<% content_for :title, "Kitetrip events" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <div>
      <h1 class="font-bold text-4xl">Kitetrip events</h1>
      <p class="text-gray-600 mt-1">Events for <%= @kitetrip.name %></p>
    </div>
    <%= link_to "New kitetrip event", new_kitetrip_kitetrip_event_path(@kitetrip), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div class="mt-8 overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
    <% if @kitetrip_events.any? %>
      <table class="min-w-full divide-y divide-gray-300">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Título</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Data do Evento</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Descrição</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
            <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
              <span class="sr-only">Ações</span>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% @kitetrip_events.each do |kitetrip_event| %>
            <tr class="hover:bg-gray-50">
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                <%= link_to kitetrip_event.title, [@kitetrip, kitetrip_event], class: "text-blue-600 hover:text-blue-900 font-medium" %>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                <%= kitetrip_event.event_date.strftime("%d/%m/%Y às %H:%M") %>
              </td>
              <td class="px-3 py-4 text-sm text-gray-500 max-w-xs truncate">
                <%= kitetrip_event.description.present? ? kitetrip_event.description : "Sem descrição" %>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                <% if kitetrip_event.event_date < DateTime.current %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Realizado</span>
                <% elsif kitetrip_event.event_date.to_date == Date.current %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Hoje</span>
                <% else %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Agendado</span>
                <% end %>
              </td>
              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                <div class="flex justify-end space-x-2">
                  <%= link_to "Ver", [@kitetrip, kitetrip_event], class: "text-blue-600 hover:text-blue-900" %>
                  <%= link_to "Editar", edit_kitetrip_kitetrip_event_path(@kitetrip, kitetrip_event), class: "text-indigo-600 hover:text-indigo-900" %>
                  <%= link_to "Excluir", [@kitetrip, kitetrip_event], method: :delete, 
                      class: "text-red-600 hover:text-red-900", 
                      data: { turbo_confirm: "Tem certeza que deseja excluir este evento?" } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 4v5a2 2 0 002 2h4a2 2 0 002-2v-5m-8 0V9a2 2 0 012-2h4a2 2 0 012 2v2M9 12l2 2 4-4" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhum evento encontrado</h3>
        <p class="mt-1 text-sm text-gray-500">Comece criando um novo evento para esta viagem.</p>
        <div class="mt-6">
          <%= link_to "Novo Evento", new_kitetrip_kitetrip_event_path(@kitetrip), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="mt-6 pt-4 border-t">
    <%= link_to "Back to #{@kitetrip.name}", @kitetrip, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  </div>
</div>
