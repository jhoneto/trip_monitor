<% content_for :title, "Showing kitetrip" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing kitetrip</h1>

  <%= render @kitetrip %>

  <div class="mt-6 border-t pt-6">
    <h2 class="font-bold text-2xl mb-4">Manage Kitetrip Resources</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <div class="p-4 bg-blue-50 rounded-lg">
        <h3 class="font-semibold text-blue-800 mb-2">Events</h3>
        <p class="text-sm text-blue-600 mb-3">Manage events for this kitetrip</p>
        <%= link_to "View Events", kitetrip_kitetrip_events_path(@kitetrip), class: "inline-block px-3 py-2 bg-blue-600 text-white rounded-md text-sm hover:bg-blue-700" %>
      </div>
      
      <div class="p-4 bg-green-50 rounded-lg">
        <h3 class="font-semibold text-green-800 mb-2">Participants</h3>
        <p class="text-sm text-green-600 mb-3">Manage participants for this kitetrip</p>
        <%= link_to "View Participants", kitetrip_kitetrip_participants_path(@kitetrip), class: "inline-block px-3 py-2 bg-green-600 text-white rounded-md text-sm hover:bg-green-700" %>
      </div>
      
      <div class="p-4 bg-purple-50 rounded-lg">
        <h3 class="font-semibold text-purple-800 mb-2">Routes</h3>
        <p class="text-sm text-purple-600 mb-3">Manage routes for this kitetrip</p>
        <%= link_to "View Routes", kitetrip_kitetrip_routes_path(@kitetrip), class: "inline-block px-3 py-2 bg-purple-600 text-white rounded-md text-sm hover:bg-purple-700" %>
      </div>
    </div>
  </div>

  <div class="border-t pt-6">
    <%= link_to "Edit this kitetrip", edit_kitetrip_path(@kitetrip), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to "Back to kitetrips", kitetrips_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_to "Destroy this kitetrip", @kitetrip, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
